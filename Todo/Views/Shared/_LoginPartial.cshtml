@using Microsoft.AspNetCore.Identity
@using Polly
@using Polly.Registry
@using System.Threading
@using Todo.Services

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject Gravatar GravatarService
@inject ResiliencePipelineProvider<string> PipelineProvider

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">

                    @{

                        var iu = await UserManager.GetUserAsync(User);
                        var emailAddress = await UserManager.GetEmailAsync(iu);

                        var pipeline = PipelineProvider.GetPipeline<UserWithGravatar>("gravatar-profiles-fallback");

                        var gravatarUser = await pipeline.ExecuteAsync(async token => 
                            await GravatarService.GetGravatarProfile(emailAddress), CancellationToken.None);
                    }

                    @if (gravatarUser.IsAuthenticated) 
                    {
                        <img src="@gravatarUser.AvatarUrl" width="30" height="30" />
                        @($"{gravatarUser.Name} ({gravatarUser.Email})")
                    }
                    else 
                    {
                        @UserManager.GetUserName(User)
                    }
                </a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}